# .env.production — Variables de entorno para PRODUCCIÓN
# ⚠️  NUNCA commitar este archivo al repositorio
# Copiar este archivo con los valores reales en el servidor de producción

# ─── Django ───────────────────────────────────────────────
# Generar con: python3 -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=CAMBIAR_POR_CLAVE_SECRETA_GENERADA

DEBUG=False

# Dominio(s) donde corre la app (separados por coma)
ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com

# ─── Base de datos (PostgreSQL) ───────────────────────────
DB_NAME=postor_cafe_prod
DB_USER=postor_user
# Contraseña fuerte generada con: openssl rand -base64 32
DB_PASSWORD=CAMBIAR_POR_PASSWORD_SEGURO
DB_HOST=db
DB_PORT=5432

# ─── Seguridad HTTPS ──────────────────────────────────────
# Activar solo cuando tengas HTTPS configurado en Nginx/servidor
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
